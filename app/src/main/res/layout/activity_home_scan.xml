<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeScanningActivity"
    tools:ignore="ExtraText">


    <View
        android:id="@+id/colorBlock"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#286181" />

    <TextView
        android:id="@+id/textAjaibProtect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Ajaib Protect"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


    <ImageButton
        android:id="@+id/imageinfo"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-51dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/colorBlock"
        android:background="@android:color/transparent"
        android:contentDescription="TODO"
        android:onClick="openInfoActivity"
        android:scaleType="fitCenter"
        android:src="@drawable/info"
        tools:ignore="OnClick"
        app:tint="@android:color/white" />


    <Button
        android:id="@+id/buttonUserApps"
        android:layout_width="209dp"
        android:layout_height="55dp"
        android:background="#327987"
        android:text="User Apps"
        android:textColor="#FFFFFF"
        android:layout_below="@id/colorBlock"
        android:layout_alignParentStart="true"
        android:onClick="openUserAppsHome" />


    <Button
        android:id="@+id/buttonSystemApps"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:background="#327987"
        android:text="System Apps"
        android:textColor="#FFFFFF"
        android:layout_below="@id/colorBlock"
        android:layout_alignParentEnd="true"
        android:onClick="openSystemAppsPage" />


    <ImageButton
        android:id="@+id/imagescanning"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/scanning"
        android:onClick="openScanningHomeActivity"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageincident"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="330dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/incident"
        android:onClick="openIncidentActivity"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imagetipsandsupport"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="475dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/tipsandsupport"
        android:contentDescription="TODO"
        android:onClick="openTipsAndSupportActivity"
        tools:ignore="OnClick" />

    <ImageButton
        android:id="@+id/imagebackup"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="217dp"
        android:layout_marginTop="475dp"
        android:background="@android:color/transparent"
        android:onClick="openBackupAndResetSettings"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/backupandreset" />


    <ImageButton
        android:id="@+id/imagesecurityco"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="217dp"
        android:layout_marginTop="330dp"
        android:background="@android:color/transparent"
        android:onClick="openSecuritySettings"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/securitycontrol" />

    <TextView
        android:id="@+id/textViewStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagebackup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="#286181"
        android:textSize="18sp" />

</RelativeLayout>

